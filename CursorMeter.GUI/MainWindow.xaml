<Window x:Class="CursorMeter.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CursorMeter.GUI"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        mc:Ignorable="d"
        Title="CursorMeter" Height="480" Width="350">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" FontSize="24" FontWeight="Bold" Text="Speed: 0.00 px/s" x:Name="SpeedText"/>
        <lvc:CartesianChart Margin="0,10,0,0" Grid.Row="1" Grid.Column="0" x:Name="MainChart" />
        <ToggleButton Margin="0,10,0,0" Grid.Row="2" Grid.Column="0" x:Name="CursorMeterSwitch" Content="Start"/>
        <ScrollViewer
            Margin="0,0,0,0"
            Grid.Row="3"
            Grid.Column="0"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Hold To Measure" Margin="0,5,5,0" Grid.Row="0" Grid.Column="0"/>
                <CheckBox x:Name="HoldToMeasureCheck" Margin="5,5,5,0" Grid.Row="0" Grid.Column="1"/>
                <TextBlock Text="Always On Top" Margin="0,5,5,0" Grid.Row="1" Grid.Column="0"/>
                <CheckBox x:Name="AlwaysOnTopCheck" Margin="5,5,5,0" Grid.Row="1" Grid.Column="1" />
                <TextBlock Text="Delta Time (ms)" Margin="0,5,5,0" Grid.Row="2" Grid.Column="0"/>
                <TextBox x:Name="DeltaTime" Text="0" Margin="5,5,5,0" Grid.Row="2" Grid.Column="1" InputMethod.InputScope="Number"/>
                <TextBlock Text="Max Record Count" Margin="0,5,5,0" Grid.Row="3" Grid.Column="0"/>
                <TextBox x:Name="MaxRecordCount" Margin="5,5,5,0" Text="0" Grid.Row="3" Grid.Column="1" InputMethod.InputScope="Number"/>
            </Grid>
        </ScrollViewer>
    </Grid>

</Window>
